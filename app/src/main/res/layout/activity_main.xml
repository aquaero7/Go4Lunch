<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fmt_map_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:name="com.example.go4lunch.Fragments.MapViewFragment"
            android:layout_weight="34"/>
            <!--
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            -->

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fmt_list_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:name="com.example.go4lunch.Fragments.ListViewFragment"
            android:layout_weight="33"/>
            <!--
            app:layout_constraintTop_toBottomOf="@id/fmt_map_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            -->

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fmt_workmates"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:name="com.example.go4lunch.Fragments.WorkmatesFragment"
            android:layout_weight="33"/>
            <!--
            app:layout_constraintTop_toBottomOf="@id/fmt_list_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            -->

    </LinearLayout>


    <!-- Toolbar import -->

    <!-- If using a specific layout for the toolbar and tag 'include' -->
    <include
        layout="@layout/toolbar_activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- If the toolbar is defined in this layout -->
    <!--
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ToolbarTheme"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:title="I'm Hungry!"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>