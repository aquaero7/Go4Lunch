<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- BASE APPLICATION THEME -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize base theme -->
        <item name="colorPrimary">@color/app_background</item>
        <item name="colorPrimaryDark">@color/app_background_dark</item>
        <item name="colorAccent">@color/design_default_color_primary_variant</item>

        <!-- Customize color of Nav Drawer button -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <!-- NO ACTIONBAR THEME -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlActivated">@color/blue_pb</item>  <!-- progressBar -->
    </style>

    <!-- TOOLBAR THEME -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Color of the title text in the Toolbar -->
        <item name="android:textColorPrimary">@color/design_default_color_primary_variant</item>
    </style>

    <!-- TOOLBAR TITLE THEME -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- TOOLBAR NAV DRAWER BUTTON THEME -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <!-- Color of the Nav Drawer button in the Toolbar -->
        <item name="color">@color/white</item>
    </style>

    <!-- TOOLBAR SEARCH VIEW THEME -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Color of the query text in the SearchView -->
        <item name="android:editTextColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- SIGN-IN ACTIVITY THEME -->
    <style name="AuthTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/app_background</item>
        <item name="colorPrimaryDark">@color/dark_grey</item>   <!-- AppBar -->
        <item name="colorAccent">@color/app_background</item>
        <item name="colorButtonNormal">@color/app_background</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/white</item>  <!-- progressBar -->
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <!-- ALERT DIALOG THEME -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:colorAccent">@color/red</item>
    </style>



</resources>